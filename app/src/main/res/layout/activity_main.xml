<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gestion Biblio"
                android:textSize="34sp" android:textAlignment="center" android:id="@+id/text_head"/>
        <Button
                android:text="Ajouter"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/text_head"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="40dp"
                android:layout_height="wrap_content" android:id="@+id/btn_add"/>
        <Button
                android:text="Supprimer"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/text_head"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="40dp"
                android:enabled="false"
                android:layout_height="wrap_content" android:id="@+id/btn_delete"/>
        <Button
                android:text="Editer"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/text_head"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="40dp"
                android:enabled="false"
                android:layout_height="wrap_content" android:id="@+id/btn_edit"/>
        <Button
                android:text="Consulter ALL"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/text_head"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="40dp"
                android:layout_height="wrap_content" android:id="@+id/btn_view"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>