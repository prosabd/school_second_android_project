<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DeleteBook">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="Gestion Biblio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_deletebook_head" android:textSize="34sp"
                android:textAlignment="center"/>
        <TextView
                android:text="Supprimer Livre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_deletebook_delete" android:textSize="24sp"/>
        <EditText
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/text_deletebook_delete"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="40dp"
                android:enabled="false"
                android:layout_height="wrap_content" android:id="@+id/input_deletebook_bookid" android:hint="LivreID"/>
        <Button
                android:text="Supprimer"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/input_deletebook_bookid"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="40dp"
                android:layout_height="wrap_content" android:id="@+id/btn_deletebook_confirm"/>
        <Button
                android:text="Retour"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_deletebook_confirm"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="40dp"
                android:layout_height="wrap_content" android:id="@+id/btn_deletebook_cancel"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>