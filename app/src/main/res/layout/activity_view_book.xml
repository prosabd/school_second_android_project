<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ViewBook">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="Gestion Biblio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_addbook_head" android:textSize="34sp"
                android:textAlignment="center"/>
        <TextView
                android:text="Consulter Livre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_viewbook_view" android:textSize="24sp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="59dp" android:layout_marginTop="30dp">
            <Button
                    android:text="Editer"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_viewbook_edit"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
            <Button
                    android:text="Supprimer"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_viewbook_delete"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
        </LinearLayout>
        <ListView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginTop="30dp"
                android:id="@+id/listview_viewbook_booklist"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>